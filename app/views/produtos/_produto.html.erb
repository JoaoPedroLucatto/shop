<tr>
    <td><%= produto.nome%></td>
    <td><%= produto.departamento.nome %></td>
    <td><%= produto.descricao%></td>
    <td><%= produto.preco%></td>
    <td><%= produto.quantidade%></td>  
    <td><%= link_to "Editar", edit_produto_path(produto), class:"btn btn-default" %></td>
    <td><%= button_to "Remover", 
            produto,
            method: :delete,
            class:"btn btn-danger",
            form:{
                data: {turbo_confirm: "Tem certeza que deseja remover o produto #{produto.nome}?" }
            }
        %>
</tr>
