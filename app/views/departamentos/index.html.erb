<p style="color: green"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= link_to "Visualizar", departamento %></td>
        <td><%= link_to "Editar", edit_departamento_path(departamento) %></td>
        <td><%= link_to "Remover", departamento, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end%>
  </tbody>
</table>
<%= link_to "Novo Departamento", new_departamento_path, class:"btn btn-default" %>
